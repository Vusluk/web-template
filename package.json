{
  "name": "template",
  "version": "1.0.0",
  "description": "WEB SPA TEMPLATE",
  "scripts": {
    "start": "BABEL_DISABLE_CACHE=1 node source/server/index.js",
    "build": "NODE_ENV=production webpack",
    "clean": "node source/init.js",

    "precommit": "npm run lint",
    "lint": "npm run jslint && npm run stylelint",
    "jslint": "eslint source/client --ext .jsx",
    "stylelint": "stylelint \"source/client/**/*.css\""
  },
  "author": "Vusluk",
  "license": "MIT",
  "dependencies": {
    "babel-core": "^6.9.1",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "immutable": "^3.8.1",
    "json-loader": "^0.5.4",
    "moment": "^2.13.0",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-hot-loader": "^3.0.0-beta.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.4.1",
    "react-router-redux": "^4.0.4",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "socket.io": "^1.4.6",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.5",
    "babel-plugin-resolver": "^0.0.7",
    "babel-plugin-webpack-loaders": "^0.5.0",
    "babel-tape-runner": "^2.0.1",
    "body-parser": "^1.15.1",
    "css-loader": "^0.23.1",
    "eslint": "^2.13.1",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-react": "^5.2.2",
    "express": "^4.13.4",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "jsonwebtoken": "^7.2.1",
    "jsx-loader": "^0.13.2",
    "mongoose": "^4.4.19",
    "mongoose-random": "^0.1.1",
    "mongoose-unique-validator": "^1.0.3",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.0.0",
    "postcss-loader": "^0.9.1",
    "redux-devtools": "^3.3.1",
    "url-loader": "^0.5.7",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-dev-server": "^1.14.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-1"
    ],
    "env": {
      "testing": {
        "plugins": [
          [
            "babel-plugin-webpack-loaders",
            {
              "config": "source/client/tests/webpack.config.js",
              "verbose": false
            }
          ],
          [
            "resolver",
            {
              "resolveDirs": [
                "source/client"
              ]
            }
          ]
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "rules": {
      "arrow-body-style": 0,
      "global-require": 0,
      "import/no-unresolved": 0,
      "no-empty-pattern": 1,
      "no-extra-parens": 0,
      "no-unused-vars": 1,
      "no-console": 0,
      "react/prop-types": 0,
      "react/jsx-first-prop-new-line": 0,
      "react/jsx-closing-bracket-location": 0,
      "semi": [
        2,
        "never"
      ]
    }
  }
}
